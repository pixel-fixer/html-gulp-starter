$gutter = 1; //percents
$gutter_px = 15; //pixels
$grid_cols = 12;
$max-width = 1230px;
$min-width = 320px;
$class_prefix = 'fl';

body, html
  min-width: $min-width;

.{$class_prefix}_container
  max-width: $max-width;
  min-width: $min-width;
  margin: 0 auto;
  padding: 0 15px;
  position: relative;
  clearfix();

.{$class_prefix}-row
  margin-right: -($gutter_px)px;
  margin-left: -($gutter_px)px;
  margin-bottom: 15px;
  clearfix();
.{$class_prefix}-row:last-child
  margin-bottom: 0;

for i in 1..$grid_cols
  .{$class_prefix}-col-{i}
    col((1/$grid_cols)*i, gutter: $gutter);
  .no-gutters .{$class_prefix}-col-{i},
  .{$class_prefix}-col-{i}.no-gutter
    span((1/$grid_cols)*i);
  .{$class_prefix}-col-pull-{i}
    margin-left: ((100/$grid_cols)*i) % !important;
  .{$class_prefix}-row .{$class_prefix}-col-{i}
    padding-left: ($gutter_px)px;
    padding-right: ($gutter_px)px;

